<div class="fragment component image-container"
     contenteditable="false"
     data-component-id="image"
     style="width: 100%; text-align: center;" data-component-name="richtext.component_image">
    <!--[if mso]>
    <table cellpadding="0" cellspacing="0" border="0" width="100%">
