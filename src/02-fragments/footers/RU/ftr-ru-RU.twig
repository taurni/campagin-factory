            <tr>
                <td>{% include "@social" with {media:"fb", url:"https://www.facebook.com/Tallink.Silja.Russia"} %}</td>
                <td>{% include "@social" with {media:"vk", url:"http://vk.com/tallink.silja.russia"} %}</td>
