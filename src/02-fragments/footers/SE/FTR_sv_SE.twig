    {% block left %}
        <span align="left" style="font-family:Arial, Helvetica, sans-serif; color:{{ theme.textColor }}; font-size:12px; line-height:14px; text-align:left;">{{"KONTAKTA OSS:"|upper}}</span><br>
        <br>

        {# Club One #}
        {% if clubone %}
            {% include "@link" with {text:"Kontaktformulär", href:"https://www.tallinksilja.se/club-one-kontakta-oss-mail"} %}<br>
            {%- for version in versions %}
                <div class="nl-dce-variant nl-dce-variant-block nl-dce-if nl-dce-multiconditional {% if version.default %}nl-dce-current-variant{% endif %}" data-component-id="html" data-component-name="richtext.component_html" data-nl-variant-group="{{ groupId }}" data-nl-variant-label="{{version.label}}" data-nl-variant-index="{{ version.index }}" data-nl-expr="{{ version.expression }}" data-nl-condition-type="multiple" {% if version.default %}data-nl-variant-default="true"{% endif %}>
                    Information och bokning: {{ version.phone| default("+46 8 22 21 40") }}<br>
                </div>
            {%- endfor %}
            Tallink Silja AB, Box 27295, 115 74 Stockholm, Sverige<br>
            {% include "@link" with {text:"www.clubone.se", href:"http://www.tallinksilja.se/club-one"} %}<br>
        {% endif %}
        {# Regular #}
        {% if regular %}
            Tallink Silja AB<br>
            Tel: +46 (0)8 22 21 40<br>
            E-post: {% include "@link" with {text:"info.sweden@tallinksilja.com", href:"mailto:info.sweden@tallinksilja.com"} %}<br>
